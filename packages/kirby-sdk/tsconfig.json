{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "lib": ["es5", "es6", "es2017", "es2018", "dom"],
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": ["src/**/*.ts"]
}
